<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/app_icon"
        android:label="CoinControl"
        android:supportsRtl="true"
        android:theme="@style/Theme.ExpenseTrackingApplication_CoinControl"
        tools:targetApi="31">
        <activity
            android:name="com.example.expensetrackingapplication_coincontrol.YearlyActivity"
            android:exported="false"
            android:theme="@style/AppTheme"/>
        <activity
            android:name="com.example.expensetrackingapplication_coincontrol.MonthlyActivity"
            android:exported="false"
            android:theme="@style/AppTheme"/>
        <activity
            android:name="com.example.expensetrackingapplication_coincontrol.DailyActivity"
            android:exported="false"
            android:theme="@style/AppTheme" />
        <activity
            android:name="com.example.expensetrackingapplication_coincontrol.LoginActivity"
            android:exported="true"
            android:theme="@style/AppTheme" />
        <activity
            android:name="com.example.expensetrackingapplication_coincontrol.SignupActivity"
            android:exported="false"
            android:theme="@style/AppTheme"/>
        <activity
            android:name="com.example.expensetrackingapplication_coincontrol.WelcomeActivity"
            android:exported="true"
            android:theme="@style/AppTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.expensetrackingapplication_coincontrol.MainActivity"
            android:exported="true"
            android:theme="@style/AppTheme">
        </activity>
    </application>

</manifest>